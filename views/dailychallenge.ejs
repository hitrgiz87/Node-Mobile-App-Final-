<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Challenge</title>
    <link rel="stylesheet" href="/stylesheets/dailychallenge.css" />
  </head>
  <body>
    <div class="daily-challenge">
      <h1 class="daily-challenge-title">Daily Challenge</h1>
      <label for="areaCodeInput">Enter Area Code:</label>
      <input type="text" id="areaCodeInput" placeholder="Enter area code">
      <h2 class="location-title">Town, State</h2>
      <div id="heart-container"></div>
      <button class="button go-button" onclick="guess()">Go!</button>
      <div id="resultBox" class="result-box">
        <div id="resultMessage"></div>
        <button class="button close-button" onclick="closeResultBox()">Close</button>
      </div>
    </div>
    <script src="/scripts/dailychallenge.js"></script>
  </body>
</html>
