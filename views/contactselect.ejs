<!DOCTYPE html>
<html>
    <head>
        <title>Contact Select</title>
        <%- include ./partials/header %>
    </head>
    <body>
        <h1> CONTACT SELECT</h1>
        <div class="container">
            <form>
                <% for (let i=0; i < userData.length; i++) { %>
                    <div class="row mb-1 p-1 border">
                        <div class="col">
                            <img src=<%= profilePic[i] %> /> 
                        </div>

                        <!-- TODO: make table or form work i dont care -->
                        <div class="col">
                            <p><%= userData[i].name %></p>
                            <p><%= phones[i] %></p>
                        </div>

                        <div class="col">
                            <input 
                                type="checkbox"
                                id="selector_" + <%= i %>
                            />
                        </div>

                    </div>
                <% } %>
            </form>
        </div>

    <%- include ./partials/scripts %>
    </body>
</html>


